<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    android:clickable="true"
    android:focusable="true">

    <ImageView
        android:id="@+id/image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginVertical="20dp"
        android:contentDescription="@string/pokemon_image_content_description"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/heightTitle"
        app:layout_constraintStart_toStartOf="@id/name"
        app:layout_constraintTop_toBottomOf="@id/name"

        />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:textSize="40sp"


        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        tools:text="Crabominable" />

    <TextView
        android:id="@+id/hpTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:text="@string/hp_title"
        android:textSize="28sp"

        app:layout_constraintBottom_toBottomOf="@id/hp"
        app:layout_constraintEnd_toStartOf="@id/hp"

        />

    <TextView
        android:id="@+id/hp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:textSize="28sp"


        app:layout_constraintBottom_toBottomOf="@+id/name"
        app:layout_constraintEnd_toEndOf="parent"

        tools:text="255" />


    <TextView
        android:id="@+id/heightTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:text="@string/height_title"
        android:textSize="28sp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/image" />

    <TextView
        android:id="@+id/weightTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="@string/weight_title"
        android:textSize="28sp"

        app:layout_constraintStart_toStartOf="@+id/heightTitle"
        app:layout_constraintTop_toBottomOf="@id/heightTitle" />

    <TextView
        android:id="@+id/height"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="26dp"
        android:textSize="26sp"
        app:layout_constraintBottom_toBottomOf="@id/heightTitle"

        app:layout_constraintStart_toEndOf="@id/heightTitle"
        app:layout_constraintTop_toTopOf="@id/heightTitle"
        tools:text="750" />

    <TextView
        android:id="@+id/weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="26sp"
        app:layout_constraintBottom_toBottomOf="@id/weightTitle"

        app:layout_constraintStart_toStartOf="@id/height"
        app:layout_constraintTop_toTopOf="@id/weightTitle"
        tools:text="9999" />

    <TextView
        android:id="@+id/typesTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="@string/types_title"
        android:textSize="28sp"

        app:layout_constraintStart_toStartOf="@+id/heightTitle"
        app:layout_constraintTop_toBottomOf="@id/weightTitle" />

    <TextView
        android:id="@+id/types"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="26sp"
        app:layout_constraintBottom_toBottomOf="@id/typesTitle"

        app:layout_constraintStart_toStartOf="@id/height"
        app:layout_constraintTop_toTopOf="@id/typesTitle"
        tools:text="Fighting, Electric, Ghost" />

    <TextView
        android:id="@+id/attackTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="@string/attack_title"
        android:textSize="28sp"

        app:layout_constraintStart_toStartOf="@+id/heightTitle"
        app:layout_constraintTop_toBottomOf="@id/typesTitle" />

    <TextView
        android:id="@+id/attack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="26sp"
        app:layout_constraintBottom_toBottomOf="@id/attackTitle"

        app:layout_constraintStart_toStartOf="@id/height"
        app:layout_constraintTop_toTopOf="@id/attackTitle"
        tools:text="190/194" />

    <TextView
        android:id="@+id/defenseTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="@string/defense_title"
        android:textSize="28sp"

        app:layout_constraintStart_toStartOf="@+id/heightTitle"
        app:layout_constraintTop_toBottomOf="@id/attackTitle" />

    <TextView
        android:id="@+id/defense"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="26sp"
        app:layout_constraintBottom_toBottomOf="@id/defenseTitle"

        app:layout_constraintStart_toStartOf="@id/height"
        app:layout_constraintTop_toTopOf="@id/defenseTitle"
        tools:text="250/250" />

    <TextView
        android:id="@+id/speedTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="@string/speed_title"
        android:textSize="28sp"

        app:layout_constraintStart_toStartOf="@+id/heightTitle"
        app:layout_constraintTop_toBottomOf="@id/defenseTitle" />

    <TextView
        android:id="@+id/speed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="26sp"
        app:layout_constraintBottom_toBottomOf="@id/speedTitle"

        app:layout_constraintStart_toStartOf="@id/height"
        app:layout_constraintTop_toTopOf="@id/speedTitle"
        tools:text="200" />


</androidx.constraintlayout.widget.ConstraintLayout>